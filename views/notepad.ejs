<script>
    window.addEventListener('load', () => {
        window.SaveMyData = () => {
            $.ajax({
                url: '/save',
                method: 'POST',
                data: {
                    text: $('.notepad').val()
                }
            }).done((saveData) => {
                if (saveData.success != null && saveData.success == true) {
                    iziToast.success({
                        title: 'Success',
                        message: 'Successfully Saved Your Notes!',
                        timeout: 2000
                    });
                } else {
                    iziToast.error({
                        title: 'Failed:',
                        message: 'Internal Server Error, Please Try Again Later!',
                        timeout: 2000
                    });
                }
            }).fail(() => {
                iziToast.error({
                    title: 'Failed:',
                    message: 'Could Not Save Your Data, Please Try Again Later!',
                    timeout: 2000
                });
            });
        }

        $('.loader').fadeOut(500, () => {
